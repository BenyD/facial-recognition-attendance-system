# Facial Recognition Attendance System Configuration

# Camera settings
# 0 is often external camera, 1 is often built-in camera
# System will fallback to available camera if specified camera is not found
CAMERA_INDEX=1

# Face recognition settings
CONFIDENCE_THRESHOLD=70

# Attendance settings
ATTENDANCE_COOLDOWN=60  # Seconds between attendances for the same person

# Directory settings
KNOWN_FACES_DIR=known_faces
ATTENDANCE_DIR=attendance_records
MODELS_DIR=models